{
  "appId": "com.netpos.retail",
  "productName": "NetPOS",
  "directories": {
    "output": "dist-electron",
    "buildResources": "electron/resources"
  },
  "files": [
    ".next/**/*",
    "public/**/*",
    "uploads/**/*",
    "node_modules/**/*",
    "package.json",
    "next.config.js",
    "electron/main.js",
    "electron/preload.js",
    "electron/backup-netpos.bat",
    "electron/find-data-folder.bat"
  ],
  "extraResources": [
    {
      "from": "netpos.db",
      "to": "app/netpos.db",
      "filter": ["**/*"]
    },
    {
      "from": "uploads",
      "to": "app/uploads",
      "filter": ["**/*"]
    }
  ],
  "npmRebuild": false,
  "buildDependenciesFromSource": false,
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      },
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "icon": "public/assets/icon.ico",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "NetPOS",
    "deleteAppDataOnUninstall": false
  },
  "portable": {
    "artifactName": "${productName}-${version}-Portable.${ext}"
  },
  "mac": {
    "target": ["dmg", "zip"],
    "icon": "public/assets/icon.icns",
    "category": "public.app-category.business"
  },
  "linux": {
    "target": ["AppImage", "deb"],
    "icon": "public/assets/icon.png",
    "category": "Office"
  }
}
